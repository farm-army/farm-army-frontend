<div class="card shadow-sm card-nft"{% if nft.tokenURI|default %} data-token-uri="{{ nft.tokenURI|default }}"{% endif %}>
    <div class="card-body">

        <div class="position-relative nft-spinner">
            <div class="position-absolute top-50 start-50 translate-middle mt-3">
                <div class="spinner-border text-center" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div class="fw-bold">#{{ nft.id|default }} <span class="nft-name"></span> <span class="nft-description"></span></div>
            </div>

            {% if nft.tokenURI|default %}
                <div class="col-auto text-end">
                     <a target="_blank" title="tokenUri: {{ nft.tokenURI|default }}" href="{{ nft.tokenURI|default }}"><i class="fas fa-table"></i></a>
                </div>
            {% endif %}
        </div>

        <div class="row mt-2">
            <div class="col-3">
                <div class="nft-image">
                    <div class="img-thumbnail">
                        <div class="position-relative">
                            <div style="background-color: #868e96; max-width: 100%; height:100px; color: rgba(255,255,255,0.75)">
                                <div class="position-absolute top-50 start-50 translate-middle">
                                    <i class="fas fa-question fs-2"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-9">
                <div class="nft-attributes overflow-auto" style="font-size: 0.8em; max-height: 200px"></div>
            </div>
        </div>

    </div>
</div>
